// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  username       String  @unique
  email_verified Boolean @default(false)
  password       String
  push_token     String?

  receipts Receipt[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Business {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String @unique
  logo     String
  password String

  receipts_shared Receipt[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("businesses")
}

model Receipt {
  id          Int    @id @default(autoincrement())
  user_id     Int
  business_id Int
  file_path   String

  user     User     @relation(fields: [user_id], references: [id])
  business Business @relation(fields: [business_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("receipts")
}

model ShareCode {
  id      Int      @id @default(autoincrement())
  user_id Int
  key     String
  is_used Boolean  @default(false)
  expires DateTime

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("share_codes")
}

model OtpToken {
  id         Int      @id @default(autoincrement())
  key        String
  is_used    Boolean  @default(false)
  expires    DateTime
  creator_id Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("otp_tokens")
}
